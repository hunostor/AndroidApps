<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- SEction One -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_height="0dp">

        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/roundededges"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_centerVertical="true"
                android:src="@drawable/personal1"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/nameTextView"
                fontPath="fonts/GlacialIndifference-Bold.ttf"
                android:text="Ucenna Noodim"
                android:layout_toRightOf="@+id/profileImage"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="15dp"               
                android:id="@+id/placeTextView"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_below="@+id/nameTextView"
                android:text="New Yersey USA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/phonecall"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profileImage"
                android:layout_below="@+id/placeTextView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="15dp"                                   
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"                   
                    android:layout_marginLeft="5dp"                   
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"                    
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:tint="@color/colorOrange"
                    android:layout_marginLeft="5dp"                   
                    android:src="@drawable/star"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Sectiton Two -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22">

        <TextView
            android:id="@+id/balanceTextView"
            android:text="$32,405.00"
            android:textSize="32sp"
            android:gravity="center"
            fontPath="fonts/GlacialIndifference-Bold.ttf"           
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_above="@+id/balanceTextView"
            android:text="Account Balande"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- Section Three -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp">

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/profile1"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:text="Transfer to Julia"
                fontPath="fonts/GlacialIndifference-Bold.ttf"                           
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:text="06-Nov-2009"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:text="-$7200"
                android:textColor="@color/colorRed"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="View"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/personal"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:text="Deposit from kaycee"
                fontPath="fonts/GlacialIndifference-Bold.ttf"                           
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:text="22-May-2017"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:text="$2300"
                android:textColor="@color/colorGreen"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="View"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/roundededges"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/friendImageView"
                android:layout_centerVertical="true"
                android:src="@drawable/personal1"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:text="Deposit from Peter"
                fontPath="fonts/GlacialIndifference-Bold.ttf"                           
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/transferDateTextView"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/descriptionTextView"
                android:layout_toRightOf="@+id/friendImageView"
                android:text="12-Jun-2016"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:text="$7200"
                android:textColor="@color/colorGreen"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="View"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/amountTextView"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout            
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:background="@drawable/roundedButton"
                    android:drawableLeft="@drawable/history"
                    android:paddingLeft="26dp"
                    android:paddingRight="16dp"
                    android:textAllCaps="false"
                    android:text="View History"
                    android:layout_weight="0.5"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>

                <Button
                    android:background="@drawable/roundedButton"                    
                    android:textAllCaps="false"
                    android:text="New Transaction"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>